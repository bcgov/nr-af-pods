{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".plasmo/index.d.ts",
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "compilerOptions": {
    "jsx": "react",
    "paths": {
      "~*": [
        "./*"
      ]
    },
    "baseUrl": ".",
    "target": "ES6",
    "lib": ["es2020", "dom"]
  }
}
